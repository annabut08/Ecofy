{
    "builds": [
        {
            "src": "backend/src/main.py",
            "use": "@vercel/python",
            "config": {
                "requirementsTxt": "backend/requirements.txt"
            }
        }
    ],
    "routes": [
        {
            "src": "/(.*)",
            "dest": "backend/src/main.py"
        }
    ]
}